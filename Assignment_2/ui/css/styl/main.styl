// out: ../main.css, compress:true, sourcemap: false
@import "./normalize.css"

orange = #F38630
dark_orange = #FA6900

html, body
  width 100%
  height 100%
  overflow hidden

.container
  width 100%
  height 100%
  background-color #E3E3E3
  text-align center

nav
  width 100%
  height 50px
  margin 0
  padding 0
  background-color dark_orange

nav div
  display inline-block
  line-height 50px

nav .logo
  width 50px
  height 50px
  float left
  margin-left 10px
nav img
  width 100%
  height 100%

nav .nav-items
  height 50px
  float right
  margin-right 100px

a
  color inherit
  text-decoration none
  font-size 25px

.content
  position relative
  width 100%
  height 100%

.content .city
  font-size 50px

/* Weather data styles */
.content .weather-data-group
  width 100%
  height 200px
  margin 0 auto
  font-size 35px
  margin-top 50px

.weather-data-group div
  width 120px
  height 120px
  float left
  margin-left 15%

.weather-data-group .icon
  color inherit

.icon img
  width 100%
  height 100%

.weather-data-group .temperature
  color inherit

.weather-data-group .weather
  color inherit
